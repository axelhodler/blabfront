{
  "name": "blabfront",
  "version": "1.0.0",
  "description": "",
  "private": "true",
  "devDependencies": {
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "jshint": "^2.9.2",
    "json-server": "0.8.10",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-cli": "^0.1.2",
    "karma-jasmine": "^0.3.8",
    "karma-ng-html2js-preprocessor": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "phantomjs": "^2.1.7",
    "phantomjs-prebuilt": "^2.1.7",
    "protractor": "^3.3.0"
  },
  "scripts": {
    "json-server": "./node_modules/json-server/bin/index.js --quiet --watch api.json",
    "kill-json-server": "lsof -i:3000 | awk 'NR==2{print $2}' | xargs kill",

    "start": "./node_modules/http-server/bin/http-server --silent",
    "kill-server": "lsof -i:8080 | awk 'NR==2{print $2}' | xargs kill",

    "test": "./node_modules/karma-cli/bin/karma start",
    "lint": "./node_modules/jshint/bin/jshint src",
    "protractor": "./node_modules/protractor/bin/protractor conf.js",
    "smoke": "npm run lint && npm run json-server & npm start & npm test && npm run protractor && git checkout -- api.json && npm run kill-json-server && npm run kill-server",
    "install": "./node_modules/protractor/bin/webdriver-manager update"
  }
}
